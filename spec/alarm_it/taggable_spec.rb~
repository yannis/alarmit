require File.expand_path('../../spec_helper', __FILE__)

describe "Alarmable" do
  before(:each) do
    clean_database!
    @taggable = AlarmableModel.new(:name => "Bob Jones")
    @taggables = [@taggable, AlarmableModel.new(:name => "John Doe")]
  end

  it "should have tag types" do
    [:tags, :languages, :skills, :needs, :offerings].each do |type|
      AlarmableModel.tag_types.should include type
    end

    @taggable.tag_types.should == AlarmableModel.tag_types
  end

  it "should have tag_counts_on" do
    AlarmableModel.tag_counts_on(:tags).all.should be_empty

    @taggable.tag_list = ["awesome", "epic"]
    @taggable.save

    AlarmableModel.tag_counts_on(:tags).length.should == 2
    @taggable.tag_counts_on(:tags).length.should == 2
  end

  it "should be able to create tags" do
    @taggable.skill_list = "ruby, rails, css"
    @taggable.instance_variable_get("@skill_list").instance_of?(AlarmIt::AlarmList).should be_true
    
    lambda {
      @taggable.save
    }.should change(AlarmIt::Alarm, :count).by(3)
    
    @taggable.reload
    @taggable.skill_list.sort.should == %w(ruby rails css).sort
  end

  it "should be able to create tags through the tag list directly" do
    @taggable.tag_list_on(:test).add("hello")
    @taggable.tag_list_cache_on(:test).should_not be_empty
    @taggable.tag_list_on(:test).should == ["hello"]
    
    @taggable.save
    @taggable.save_tags
    
    @taggable.reload
    @taggable.tag_list_on(:test).should == ["hello"]
  end

  it "should differentiate between contexts" do
    @taggable.skill_list = "ruby, rails, css"
    @taggable.tag_list = "ruby, bob, charlie"
    @taggable.save
    @taggable.reload
    @taggable.skill_list.should include("ruby")
    @taggable.skill_list.should_not include("bob")
  end

  it "should be able to remove tags through list alone" do
    @taggable.skill_list = "ruby, rails, css"
    @taggable.save
    @taggable.reload
    @taggable.should have(3).skills
    @taggable.skill_list = "ruby, rails"
    @taggable.save
    @taggable.reload
    @taggable.should have(2).skills
  end

  it "should be able to select taggables by subset of tags using ActiveRelation methods" do
    @taggables[0].tag_list = "bob"
    @taggables[1].tag_list = "charlie"
    @taggables[0].skill_list = "ruby"
    @taggables[1].skill_list = "css"
    @taggables.each{|taggable| taggable.save}
    
    @found_taggables_by_tag = AlarmableModel.joins(:tags).where(:tags => {:name => ["bob"]})
    @found_taggables_by_skill = AlarmableModel.joins(:skills).where(:tags => {:name => ["ruby"]})

    @found_taggables_by_tag.should include @taggables[0]
    @found_taggables_by_tag.should_not include @taggables[1]
    @found_taggables_by_skill.should include @taggables[0]
    @found_taggables_by_skill.should_not include @taggables[1]
  end
  
  it "should be able to find by tag" do
    @taggable.skill_list = "ruby, rails, css"
    @taggable.save

    AlarmableModel.tagged_with("ruby").first.should == @taggable
  end

  it "should be able to find by tag with context" do
    @taggable.skill_list = "ruby, rails, css"
    @taggable.tag_list = "bob, charlie"
    @taggable.save

    AlarmableModel.tagged_with("ruby").first.should == @taggable
    AlarmableModel.tagged_with("ruby, css").first.should == @taggable
    AlarmableModel.tagged_with("bob", :on => :skills).first.should_not == @taggable
    AlarmableModel.tagged_with("bob", :on => :tags).first.should == @taggable
  end

  it "should not care about case" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "ruby")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "Ruby")

    AlarmIt::Alarm.find(:all).size.should == 1
    AlarmableModel.tagged_with("ruby").to_a.should == AlarmableModel.tagged_with("Ruby").to_a
  end

  it "should be able to get tag counts on model as a whole" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "ruby, rails")
    charlie = AlarmableModel.create(:name => "Charlie", :skill_list => "ruby")
    AlarmableModel.tag_counts.all.should_not be_empty
    AlarmableModel.skill_counts.all.should_not be_empty
  end

  it "should be able to get all tag counts on model as whole" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "ruby, rails")
    charlie = AlarmableModel.create(:name => "Charlie", :skill_list => "ruby")

    AlarmableModel.all_tag_counts.all.should_not be_empty
    AlarmableModel.all_tag_counts(:order => 'tags.id').first.count.should == 3 # ruby
  end

  if ActiveRecord::VERSION::MAJOR >= 3
    it "should not return read-only records" do
      AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
      AlarmableModel.tagged_with("ruby").first.should_not be_readonly
    end
  else
    xit "should not return read-only records" do
      # apparantly, there is no way to set readonly to false in a scope if joins are made
    end
    
    it "should be possible to return writable records" do
      AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
      AlarmableModel.tagged_with("ruby").first(:readonly => false).should_not be_readonly      
    end
  end

  it "should be able to get scoped tag counts" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "ruby, rails")
    charlie = AlarmableModel.create(:name => "Charlie", :skill_list => "ruby")

    AlarmableModel.tagged_with("ruby").tag_counts(:order => 'tags.id').first.count.should == 2   # ruby
    AlarmableModel.tagged_with("ruby").skill_counts.first.count.should == 1 # ruby
  end

  it "should be able to get all scoped tag counts" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "ruby, rails")
    charlie = AlarmableModel.create(:name => "Charlie", :skill_list => "ruby")

    AlarmableModel.tagged_with("ruby").all_tag_counts(:order => 'tags.id').first.count.should == 3 # ruby
  end

  it 'should only return tag counts for the available scope' do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "ruby, rails")
    charlie = AlarmableModel.create(:name => "Charlie", :skill_list => "ruby, java")
 
    AlarmableModel.tagged_with('rails').all_tag_counts.should have(3).items
    AlarmableModel.tagged_with('rails').all_tag_counts.any? { |tag| tag.name == 'java' }.should be_false
    
    # Test specific join syntaxes:
    frank.untaggable_models.create!
    AlarmableModel.tagged_with('rails').scoped(:joins => :untaggable_models).all_tag_counts.should have(2).items
    AlarmableModel.tagged_with('rails').scoped(:joins => { :untaggable_models => :taggable_model }).all_tag_counts.should have(2).items
    AlarmableModel.tagged_with('rails').scoped(:joins => [:untaggable_models]).all_tag_counts.should have(2).items
  end

  it "should be able to set a custom tag context list" do
    bob = AlarmableModel.create(:name => "Bob")
    bob.set_tag_list_on(:rotors, "spinning, jumping")
    bob.tag_list_on(:rotors).should == ["spinning","jumping"]
    bob.save
    bob.reload
    bob.tags_on(:rotors).should_not be_empty
  end

  it "should be able to find tagged" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "fitter, happier, more productive", :skill_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "weaker, depressed, inefficient", :skill_list => "ruby, rails, css")
    steve = AlarmableModel.create(:name => 'Steve', :tag_list => 'fitter, happier, more productive', :skill_list => 'c++, java, ruby')

    AlarmableModel.tagged_with("ruby", :order => 'taggable_models.name').to_a.should == [bob, frank, steve]
    AlarmableModel.tagged_with("ruby, rails", :order => 'taggable_models.name').to_a.should == [bob, frank]
    AlarmableModel.tagged_with(["ruby", "rails"], :order => 'taggable_models.name').to_a.should == [bob, frank]
  end
  
  it "should be able to find tagged with quotation marks" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "fitter, happier, more productive, 'I love the ,comma,'")
    AlarmableModel.tagged_with("'I love the ,comma,'").should include(bob)
  end
  
  it "should be able to find tagged with invalid tags" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "fitter, happier, more productive")    
    AlarmableModel.tagged_with("sad, happier").should_not include(bob)    
  end

  it "should be able to find tagged with any tag" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "fitter, happier, more productive", :skill_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "weaker, depressed, inefficient", :skill_list => "ruby, rails, css")
    steve = AlarmableModel.create(:name => 'Steve', :tag_list => 'fitter, happier, more productive', :skill_list => 'c++, java, ruby')

    AlarmableModel.tagged_with(["ruby", "java"], :order => 'taggable_models.name', :any => true).to_a.should == [bob, frank, steve]
    AlarmableModel.tagged_with(["c++", "fitter"], :order => 'taggable_models.name', :any => true).to_a.should == [bob, steve]
    AlarmableModel.tagged_with(["depressed", "css"], :order => 'taggable_models.name', :any => true).to_a.should == [bob, frank]
  end

  it "should be able to find tagged on a custom tag context" do
    bob = AlarmableModel.create(:name => "Bob")
    bob.set_tag_list_on(:rotors, "spinning, jumping")
    bob.tag_list_on(:rotors).should == ["spinning","jumping"]
    bob.save

    AlarmableModel.tagged_with("spinning", :on => :rotors).to_a.should == [bob]
  end

  it "should be able to use named scopes to chain tag finds" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "fitter, happier, more productive", :skill_list => "ruby, rails, css")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "weaker, depressed, inefficient", :skill_list => "ruby, rails, css")
    steve = AlarmableModel.create(:name => 'Steve', :tag_list => 'fitter, happier, more productive', :skill_list => 'c++, java, python')

    # Let's only find those productive Rails developers
    AlarmableModel.tagged_with('rails', :on => :skills, :order => 'taggable_models.name').to_a.should == [bob, frank]
    AlarmableModel.tagged_with('happier', :on => :tags, :order => 'taggable_models.name').to_a.should == [bob, steve]
    AlarmableModel.tagged_with('rails', :on => :skills).tagged_with('happier', :on => :tags).to_a.should == [bob]
    AlarmableModel.tagged_with('rails').tagged_with('happier', :on => :tags).to_a.should == [bob]
  end

  it "should be able to find tagged with only the matching tags" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "lazy, happier")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "fitter, happier, inefficient")
    steve = AlarmableModel.create(:name => 'Steve', :tag_list => "fitter, happier")

    AlarmableModel.tagged_with("fitter, happier", :match_all => true).to_a.should == [steve]
  end

  it "should be able to find tagged with some excluded tags" do
    bob = AlarmableModel.create(:name => "Bob", :tag_list => "happier, lazy")
    frank = AlarmableModel.create(:name => "Frank", :tag_list => "happier")
    steve = AlarmableModel.create(:name => 'Steve', :tag_list => "happier")

    AlarmableModel.tagged_with("lazy", :exclude => true).to_a.should == [frank, steve]
  end

  it "should not create duplicate taggings" do
    bob = AlarmableModel.create(:name => "Bob")
    lambda {
      bob.tag_list << "happier"
      bob.tag_list << "happier"
      bob.save
    }.should change(AlarmIt::Alarmging, :count).by(1)
  end
 
  describe "Associations" do
    before(:each) do
      @taggable = AlarmableModel.create(:tag_list => "awesome, epic")
    end
    
    it "should not remove tags when creating associated objects" do
      @taggable.untaggable_models.create!
      @taggable.reload
      @taggable.tag_list.should have(2).items
    end
  end

  describe "grouped_column_names_for method" do
    it "should return all column names joined for Alarm GROUP clause" do
      @taggable.grouped_column_names_for(AlarmIt::Alarm).should == "tags.id, tags.name"
    end

    it "should return all column names joined for AlarmableModel GROUP clause" do
      @taggable.grouped_column_names_for(AlarmableModel).should == "taggable_models.id, taggable_models.name, taggable_models.type"
    end
  end

  describe "Single Table Inheritance" do
    before do
      @taggable = AlarmableModel.new(:name => "taggable")
      @inherited_same = InheritingAlarmableModel.new(:name => "inherited same")
      @inherited_different = AlteredInheritingAlarmableModel.new(:name => "inherited different")
    end
  
    it "should be able to save tags for inherited models" do
      @inherited_same.tag_list = "bob, kelso"
      @inherited_same.save
      InheritingAlarmableModel.tagged_with("bob").first.should == @inherited_same
    end
  
    it "should find STI tagged models on the superclass" do
      @inherited_same.tag_list = "bob, kelso"
      @inherited_same.save
      AlarmableModel.tagged_with("bob").first.should == @inherited_same
    end
  
    it "should be able to add on contexts only to some subclasses" do
      @inherited_different.part_list = "fork, spoon"
      @inherited_different.save
      InheritingAlarmableModel.tagged_with("fork", :on => :parts).should be_empty
      AlteredInheritingAlarmableModel.tagged_with("fork", :on => :parts).first.should == @inherited_different
    end
  
    it "should have different tag_counts_on for inherited models" do
      @inherited_same.tag_list = "bob, kelso"
      @inherited_same.save!
      @inherited_different.tag_list = "fork, spoon"
      @inherited_different.save!
  
      InheritingAlarmableModel.tag_counts_on(:tags, :order => 'tags.id').map(&:name).should == %w(bob kelso)
      AlteredInheritingAlarmableModel.tag_counts_on(:tags, :order => 'tags.id').map(&:name).should == %w(fork spoon)
      AlarmableModel.tag_counts_on(:tags, :order => 'tags.id').map(&:name).should == %w(bob kelso fork spoon)
    end
  
    it 'should store same tag without validation conflict' do
      @taggable.tag_list = 'one'
      @taggable.save!
  
      @inherited_same.tag_list = 'one'
      @inherited_same.save!
  
      @inherited_same.update_attributes! :name => 'foo'
    end
  end
end
