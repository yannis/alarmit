require File.expand_path('../../spec_helper', __FILE__)

describe AlarmIt::Alarmging do
  before(:each) do
    clean_database!
    @tagging = AlarmIt::Alarmging.new
  end

  it "should not be valid with a invalid tag" do
    @tagging.taggable = AlarmableModel.create(:name => "Bob Jones")
    @tagging.tag = AlarmIt::Alarm.new(:name => "")
    @tagging.context = "tags"

    @tagging.should_not be_valid
    
    if ActiveRecord::VERSION::MAJOR >= 3
      @tagging.errors[:tag_id].should == ["can't be blank"]
    else
      @tagging.errors[:tag_id].should == "can't be blank"
    end
  end

  it "should not create duplicate taggings" do
    @taggable = AlarmableModel.create(:name => "Bob Jones")
    @tag = AlarmIt::Alarm.create(:name => "awesome")

    lambda {
      2.times { AlarmIt::Alarmging.create(:taggable => @taggable, :tag => @tag, :context => 'tags') }
    }.should change(AlarmIt::Alarmging, :count).by(1)
  end
end
